{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "ESNext",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vitest/globals"]
  },
  "include": ["src"]
}
