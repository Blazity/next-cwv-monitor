{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "exclude": ["src/tests"]
}
